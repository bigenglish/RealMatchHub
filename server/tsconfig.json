
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "types": ["node"],
    "outDir": "dist",
    "noEmit": false,
    "noEmitOnError": false
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
